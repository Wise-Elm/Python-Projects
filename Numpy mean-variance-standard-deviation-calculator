"""program to fulfill project - boilerplate-mean-variance-standard-deviation-calculator - from 
freecodecamp.com"""

import numpy as np

lst_len = 9  # python/numpy assignment requires a list length of 9


def calculate(list):
    """returns important statistical data based on input in the form of a dictionary"""

    """function that uses numpy to output the mean, variance, standard deviation, max, min, and sum of the rows,
    columns, and elements in a 3 x 3 matrix."""

    calculations = {}

    if len(list) != lst_len:
        raise ValueError(f'List must contain {lst_len} numbers.')

    list_array = np.asarray(list).reshape(3, 3)  # converts the input list into a 3x3 array

    calculations['sum'] = a_sum(list_array)
    calculations['mean'] = a_mean(list_array)
    calculations['min'] = a_min(list_array)
    calculations['max'] = a_max(list_array)
    calculations['variance'] = a_variance(list_array)

    return calculations


def a_deviation(array):
    """returns the deviation values of the input array"""

    axis_0_deviation = np.std(array, axis=0)
    axis_1_deviation = np.std(array, axis=1)
    total_deviation = np.std(array)
    # returns list of the deviation values
    return [axis_0_deviation.tolist(), axis_1_deviation.tolist(), total_deviation.tolist()]


def a_variance(array):
    """returns the variance values of the input array"""

    axis_0_variance = np.var(array, axis=0)
    axis_1_variance = np.var(array, axis=1)
    total_variance = np.var(array)
    # returns list of the variance values
    return [axis_0_variance.tolist(), axis_1_variance.tolist(), total_variance.tolist()]


def a_max(array):
    """returns the max values of the input array"""

    axis_0_max = np.max(array, axis=0)
    axis_1_max = np.max(array, axis=1)
    total_max = np.max(array)
    return [axis_0_max.tolist(), axis_1_max.tolist(), total_max.tolist()]  # returns list of the max values


def a_sum(array):
    """returns the sum values the input array"""

    axis_0_sum = np.sum(array, axis=0)
    axis_1_sum = np.sum(array, axis=1)
    total_sum = np.sum(array)
    return [axis_0_sum.tolist(), axis_1_sum.tolist(), total_sum.tolist()]  # returns list of sum values


def a_mean(array):
    """returns the mean values for the input array"""

    axis_0_mean = np.mean(array, axis=0)
    axis_1_mean = np.mean(array, axis=1)
    total_mean = np.mean(array)
    return [axis_0_mean.tolist(), axis_1_mean.tolist(), total_mean.tolist()]  # returns list of mean values


def a_min(array):
    """returns the min values for the input array"""

    axis_0_min = np.min(array, axis=0)
    axis_1_min = np.min(array, axis=1)
    total_min = np.min(array)
    return [axis_0_min.tolist(), axis_1_min.tolist(), total_min.tolist()]  # returns list of min values


if __name__ == '__main__':
    calculate([0, 1, 2, 3, 4, 5, 6, 7, 8])
